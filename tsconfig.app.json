{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "src/**/__ct__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/features/calendar/api/*"],
      "@components/*": ["./src/features/calendar/components/*"],
      "@composables/*": ["./src/features/calendar/composables/*"],
      "@stores/*": ["./src/features/calendar/stores/*"],
      "@views/*": ["./src/features/calendar/views/*"],
      "@lib/*": ["./src/lib/*"]
    }
  }
}
