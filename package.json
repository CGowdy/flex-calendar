{
  "name": "my-abeka-calendar",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:full": "run-p dev dev:server",
    "build": "run-s type-check build:all",
    "build:all": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache",
    "format": "prettier --write src/",
    "test:unit": "vitest",
    "test:server": "vitest --config vitest.server.config.ts",
    "test": "run-p test:unit",
    "seed:sample": "tsx src/server/scripts/seedSampleCalendar.ts",
    "start:server": "node dist/server/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/sensible": "^6.0.0",
    "@tanstack/vue-query": "^5.62.7",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "mongoose": "^8.8.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.18.11",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.23",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.37.0",
    "eslint-plugin-vue": "~10.5.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "mongodb-memory-server": "^10.1.4",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  }
}
